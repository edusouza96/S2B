@model IEnumerable<pjtCidadedeira.Models.Categoria>

@{
    ViewBag.Title = "Index";
}

<h2>Categoria</h2>

<p>
    @Html.ActionLink("Nova Categoria", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Procurar Por Categoria: @Html.TextBox("Search")
        <input type ="submit" value="Buscar" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.Label("Descrição")
        </th>
        <th>
            @Html.Label("Ações")
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CategoriaID }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.CategoriaID })
        </td>
    </tr>
}

</table>
