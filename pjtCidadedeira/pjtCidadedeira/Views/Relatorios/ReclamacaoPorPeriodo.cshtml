@model IEnumerable<pjtCidadedeira.Models.PorReclamacao>

@{
    ViewBag.Title = "ReclamacaoPorPeriodo";
}

<h2>Reclamação Por Periodo</h2>
@using (Html.BeginForm())
{
    <p>
        @Html.RadioButton("opcao", "categoria") Por Categoria
        @Html.RadioButton("opcao", "bairro") Por Bairro
        <br/>
        Data: @Html.TextBox("dataBuscar")
        <input type="submit" value="Buscar" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.Label("Quantidade")
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.propriedade)
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.ReclamacaoCount
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.propriedade)
        </td>
       
       
    </tr>
}

</table>
